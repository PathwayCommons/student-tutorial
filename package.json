{
  "name": "tutorial",
  "version": "1.0.0",
  "description": "A tutorial for students to use the tooling",
  "scripts": {
    "test": "mocha",
    "bundle-js": "webpack",
    "bundle-css": "postcss src/style/index.css -o build/bundle.css",
    "bundle": "run-p bundle-js bundle-css",
    "watch-js": "webpack --watch",
    "watch-css": "postcss --watch src/style/index.css -o build/bundle.css",
    "watch": "run-p watch-js watch-css dev-server",
    "dev-server": "browser-sync --server --files build index.html",
    "start": "run-s watch",
    "lint-css": "stylelint src/style/**/*.css",
    "lint-js": "eslint src",
    "lint": "run-s lint-js lint-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PathwayCommons/student-tutorial.git"
  },
  "author": "Me",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PathwayCommons/student-tutorial/issues"
  },
  "homepage": "https://github.com/PathwayCommons/student-tutorial#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "browser-sync": "^2.18.13",
    "eslint": "^4.6.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "postcss": "^6.0.11",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.7.1"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hyperscript": "^3.0.0"
  }
}
